           <DataTemplate x:DataType="models:Producto">  
               <VerticalStackLayout Padding="10">  
                   <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="18"/>  
                   <Label Text="CategorÃ­a: {Binding Categoria}" />  
                   <Label Text="Cantidad: {Binding Cantidad}" />  

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            xmlns:vm="clr-namespace:CarlosMoreta_Examenprogra.ViewModels"  
            xmlns:models="clr-namespace:CarlosMoreta_Examenprogra.Models"  
            x:Class="CarlosMoreta_Examenprogra.Views.ListaProductoPage"  
            Title="ListaProductoPage">  

   <ContentPage.BindingContext>  
       <vm:ListaProductosViewModel/>  
   </ContentPage.BindingContext>  

   <CollectionView ItemsSource="{Binding Productos}" Margin="10">  

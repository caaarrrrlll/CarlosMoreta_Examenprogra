<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CarlosMoreta_Examenprogra.ViewModels"  
             x:Class="CarlosMoreta_Examenprogra.Views.LogsPage"
             Title="LogsPage">

    <ContentPage.BindingContext>
        <vm:LogsViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10" Spacing="10">
        <Button Text="Refrescar Logs" Clicked="OnRefreshClicked" />
        <CollectionView ItemsSource="{Binding Logs}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}" FontSize="14" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
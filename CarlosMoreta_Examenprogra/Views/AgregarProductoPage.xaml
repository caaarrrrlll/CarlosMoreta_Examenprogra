<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            xmlns:vm="clr-namespace:CarlosMoreta_Examenprogra.ViewModels"  
            x:Class="CarlosMoreta_Examenprogra.Views.AgregarProductoPage"  
            Title="AgregarProductoPage">  

   <ContentPage.BindingContext>  
       <vm:AgregarProductoViewModel />  
   </ContentPage.BindingContext>  

   <ScrollView Padding="20">  
       <VerticalStackLayout Spacing="10">  
           <Entry Placeholder="Nombre" Text="{Binding Nombre}" />  
           <Entry Placeholder="CategorÃ­a" Text="{Binding Categoria}" />  
           <Entry Placeholder="Cantidad" Keyboard="Numeric" Text="{Binding Cantidad}" />  
           <Entry Placeholder="Precio Estimado" Keyboard="Numeric" Text="{Binding PrecioEstimado}" />  

           <Button Text="Agregar Producto" Command="{Binding GuardarCommand}" />  

           <Label Text="{Binding Mensaje}" TextColor="DarkGreen" FontAttributes="Bold" />  
       </VerticalStackLayout>  
   </ScrollView>  
</ContentPage>